<form id="updatePost">

     <div class="container border border-dark">
          <div class="row bg-dark text-white">
               <div class="col-12">
                    <h3>Edit Post</h3>
               </div>
          </div>

          <div class="row p-3">

               <div class="form-group">
                    <label for="postTitle">
                         <h4>Title:</h4>
                    </label>
                    <textarea class="form-control" id="postTitle" rows="1">{{post.post_title}}</textarea>
               </div>

               <div class="form-group">
                    <br>
                    <label for="postBody">
                         <h4>Content:</h4>
                    </label>
                    <textarea class="form-control" id="postBody" rows="3">{{post.post_body}}</textarea>
               </div>

               <div class="text-center">
                    <br>
                    <button type="button" class="btn btn-dark" id="updateBtn" value="{{post.id}}">Update Post</button>
               </div>

          </div>
     </div>

</form>
<br>
<script src="/js/updatePost.js"></script>