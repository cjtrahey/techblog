<div class="container border border-dark hidden" id="signupContainer">
     <div class="row bg-dark text-white">
          <div>
               <h3>Signup</h3>
          </div>
     </div>
     <div class="row p-3">
          <form class="form signup-form">
               <div class="form-group">
                    <br>
                    <label for="username-signup">Username:</label>
                    <input class="form-input" type="text" id="username-signup" />
               </div>
               <div class="form-group">
                    <br>
                    <label for="email-signup">Email:</label>
                    <input class="form-input" type="text" id="email-signup" />
               </div>
               <div class="form-group">
                    <br>
                    <label for="password-signup">Password:</label>
                    <input class="form-input" type="password" id="password-signup" />
               </div>
               <div class="form-group">
                    <br>
                    <button class="btn btn-primary bg-dark text-white" type="submit">Signup</button>
               </div>
          </form>
     </div>
     <a href="/login">Need to log in instead?</a>
     <br><br>
</div>

<script src="/js/signup.js"></script>