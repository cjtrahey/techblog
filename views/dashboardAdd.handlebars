<form id="addPost">

     <div class="container border border-dark">
          <div class="row bg-dark text-white">
               <div class="col-12">
                    <h3>Add New Post</h3>
               </div>
          </div>

          <div class="row p-3">

               <div class="form-group">
                    <label for="post-title">
                         <h4>Title:</h4>
                    </label>
                    <textarea class="form-control" id="post-title" rows="1"></textarea>
               </div>

               <div class="form-group">
                    <br>
                    <label for="post-body">
                         <h4>Content:</h4>
                    </label>
                    <textarea class="form-control" id="post-body"></textarea>
               </div>

               <div class="text-center">
                    <br>
                    <button type="submit" class="btn btn-dark" id="myBtn">Submit Post</button>
               </div>

          </div>
     </div>
</form>
<br>

<script src="/js/addPost.js"></script>